<div class="container" style="margin-top: 10px">
  <div class="btn-group btn-group-justified" role="group" aria-label="Basic example">
    <% @sections.each do |section| %>
        <%= link_to section, menu_path(section: section), class: 'btn btn-secondary' %>
    <% end %>
  </div>
  <% @food_items.in_groups_of(3) do |group| %>

      <div class="row">
        <% group.compact.each do |food_item| %>
            <div class="col-sm-4">
              <div class="card" style="margin-top: 10px">
                <%= image_tag food_item.image_url_or_default, alt: food_item.name %>
                <div class="card-block">
                  <h4 class="card-title"><%= food_item.name %></h4>

                  <p class="card-text"><%= food_item.description %></p>
                  <a href="#" class="btn btn-danger  ">order</a>
                </div>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>
</div>

