<h1>List of Food Items</h1>
<%= link_to 'Add New Food Item', new_food_item_path, :class => 'btn btn-secondary', :style => 'margin-bottom: 10px' %>
<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <td>Name</td>
    <td>Description</td>
    <td>Price</td>
    <td>Section</td>
    <td>Image Url</td>
    <td colspan="3"></td>
  </tr>
  </thead>

  <tbody>
  <% @food_items.each do |food_item| %>
      <tr>
        <td><%= food_item.name %></td>
        <td><%= food_item.description %></td>
        <td><%= food_item.price %></td>
        <td><%= food_item.section %></td>
        <td><%= image_tag(food_item.image_url) %></td>
        <td><%= link_to 'show', food_item %></td>
        <td><%= link_to 'Edit', edit_food_item_path(food_item) %></td>
        <td><%= link_to 'Delete', food_item, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>

</table>